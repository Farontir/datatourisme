{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@datatourisme/ui": ["../../packages/ui/src"],
      "@datatourisme/utils": ["../../packages/utils/src"],
      "@datatourisme/api-client": ["../../packages/api-client/src"],
      "@datatourisme/types": ["../../packages/types/src"],
      "@datatourisme/config": ["../../packages/config/src"]
    }
  },
  "exclude": ["node_modules"]
}